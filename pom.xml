<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>com.aperto.magkit</groupId>
    <artifactId>monitoring</artifactId>
    <version>1.0.2</version>
    <name>Aperto MagKit Monitoring</name>

    <properties>
        <source.javaversion>11</source.javaversion>
        <target.javaversion>11</target.javaversion>

        <source.encoding>UTF-8</source.encoding>
        <resource.encoding>${source.encoding}</resource.encoding>
        <project.build.sourceEncoding>${source.encoding}</project.build.sourceEncoding>

        <maven.compiler.plugin.version>3.7.0</maven.compiler.plugin.version>
        <maven.jar.plugin.version>3.1.2</maven.jar.plugin.version>

        <maven.checkstyle.plugin>3.0.0</maven.checkstyle.plugin>
        <com.puppycrawl.tools.checkstyle>6.16</com.puppycrawl.tools.checkstyle>

        <jgit-buildnumber.version>2.4.0</jgit-buildnumber.version>
        <build.buildnumber />
    </properties>

    <dependencies>

        <!--dependency>
            <groupId>io.prometheus</groupId>
            <artifactId>simpleclient</artifactId>
            <version>0.8.1</version>
        </dependency-->

        <dependency>
            <groupId>io.micrometer</groupId>
            <artifactId>micrometer-registry-prometheus</artifactId>
            <version>1.10.0</version>
        </dependency>

        <dependency>
            <groupId>info.magnolia.about</groupId>
            <artifactId>magnolia-about-app</artifactId>
            <version>6.2</version>
        </dependency>
        <dependency>
            <groupId>info.magnolia</groupId>
            <artifactId>magnolia-license</artifactId>
            <version>1.7.1</version>
        </dependency>
        <dependency>
            <groupId>info.magnolia.rest</groupId>
            <artifactId>magnolia-rest-services</artifactId>
            <version>2.2.15</version>
        </dependency>
        <dependency>
            <groupId>info.magnolia.scheduler</groupId>
            <artifactId>magnolia-module-scheduler</artifactId>
            <version>2.3.6</version>
        </dependency>
        <dependency>
            <groupId>javax.servlet</groupId>
            <artifactId>javax.servlet-api</artifactId>
            <version>4.0.1</version>
            <scope>provided</scope>
        </dependency>
    </dependencies>

    <build>
        <resources>
            <!-- Filter all *.properties files within resources directory and keep other files as they are. -->
            <resource>
                <directory>src/main/resources</directory>
                <excludes>
                    <exclude>**/*.properties</exclude>
                    <exclude>**/META-INF/magnolia/*.xml</exclude>
                </excludes>
            </resource>
            <resource>
                <filtering>true</filtering>
                <directory>src/main/resources</directory>
                <includes>
                    <include>**/*.properties</include>
                    <include>**/META-INF/magnolia/*.xml</include>
                </includes>
            </resource>
        </resources>
        <plugins>
            <plugin>
                <!-- see http://mojo.codehaus.org/build-helper-maven-plugin/usage.html#Access_the_parsed_components_of_a_project_version -->
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>build-helper-maven-plugin</artifactId>
                <version>3.1.0</version>
                <executions>
                    <execution>
                        <id>parse-version</id>
                        <goals>
                            <goal>parse-version</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-checkstyle-plugin</artifactId>
                <version>${maven.checkstyle.plugin}</version>
                <configuration>
                    <!-- checkstyle-rules-lax-javadoc.xml are provided by aperto-build-tools extension, see build/extensions 
                        below -->
                    <configLocation>aperto-checkstyle.xml</configLocation>
                    <failsOnError>true</failsOnError>
                    <consoleOutput>true</consoleOutput>
                    <includeTestSourceDirectory>true</includeTestSourceDirectory>
                    <excludes>${checkstyle.excludes}</excludes>
                    <skip>${checkstyle.skip}</skip>
                    <logViolationsToConsole>true</logViolationsToConsole>
                    <failOnViolation>true</failOnViolation>
                    <maxAllowedViolations>0</maxAllowedViolations>
                    <violationSeverity>info</violationSeverity>
                    <encoding>${source.encoding}</encoding>
                    <headerLocation />
                </configuration>
                <executions>
                    <execution>
                        <id>check-checkstyle</id>
                        <phase>verify</phase>
                        <goals>
                            <goal>check</goal>
                        </goals>
                    </execution>
                </executions>
                <dependencies>
                    <dependency>
                        <groupId>com.puppycrawl.tools</groupId>
                        <artifactId>checkstyle</artifactId>
                        <version>${com.puppycrawl.tools.checkstyle}</version>
                    </dependency>
                </dependencies>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>${maven.compiler.plugin.version}</version>
                <configuration>
                    <encoding>${project.build.sourceEncoding}</encoding>
                    <source>${source.javaversion}</source>
                    <target>${target.javaversion}</target>
                    <showDeprecation>true</showDeprecation>
                    <showWarnings>true</showWarnings>
                </configuration>
            </plugin>


            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jar-plugin</artifactId>
                <version>${maven.jar.plugin.version}</version>
                <configuration>
                    <archive>
                        <addMavenDescriptor>false</addMavenDescriptor>
                        <forced>false</forced>
                        <!-- see http://maven.apache.org/guides/mini/guide-manifest.html -->
                        <index>true</index>
                        <manifest>
                            <addDefaultImplementationEntries>true</addDefaultImplementationEntries>
                        </manifest>
                        <manifestEntries>
                            <!-- write build information into the manifest file -->
                            <Build-Buildkey>${build.buildkey}</Build-Buildkey>
                            <Build-Buildnumber>${build.buildnumber}</Build-Buildnumber>
                            <Build-Revision>${build.revision}</Build-Revision>
                            <Built-By>${customer}</Built-By>
                            <Build-Jdk>${java.version}</Build-Jdk>
                            <Implementation-Build>revision: ${build.buildnumber} - ${maven.build.timestamp}</Implementation-Build>
                            <Implementation-Title>${project.artifactId}</Implementation-Title>
                            <Implementation-Vendor>${customer}</Implementation-Vendor>
                            <Implementation-Version>${project.version}</Implementation-Version>
                            <X-Compile-Source-JDK>${source.javaversion}</X-Compile-Source-JDK>
                            <X-Compile-Target-JDK>${target.javaversion}</X-Compile-Target-JDK>
                            <X-Git-Commits-Count>${git.commitsCount}</X-Git-Commits-Count>
                            <X-Git-Branch>${git.branch}</X-Git-Branch>
                            <X-Git-Tag>${git.tag}</X-Git-Tag>
                        </manifestEntries>
                    </archive>
                </configuration>
            </plugin>
            <plugin>
                <groupId>com.labun.buildnumber</groupId>
                <artifactId>jgit-buildnumber-maven-plugin</artifactId>
                <version>${jgit-buildnumber.version}</version>
                <executions>
                    <execution>
                        <id>git-buildnumber</id>
                        <goals>
                            <goal>extract-buildnumber</goal>
                        </goals>
                        <phase>initialize</phase>
                        <configuration>
                            <buildNumberFormat>
                                branch.replace('/', '-') + "-" + commitsCount + "-" + shortRevision
                            </buildNumberFormat>
                            <verbose>true</verbose>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

        </plugins>
    </build>

    <scm>
        <connection>scm:git:https://github.ibmix.de/magkit/monitoring.git</connection>
        <developerConnection>scm:git:https://github.ibmix.de/magkit/monitoring.git</developerConnection>
        <url>scm:git:https://github.ibmix.de/magkit/monitoring.git</url>
    </scm>


    <repositories>
        <repository>
            <id>ibmix.magkit.group</id>
            <name>Aperto MagKit Group</name>
            <url>https://nexus.ibmix.de/repository/magkit/</url>
        </repository>
    </repositories>
    <pluginRepositories>
        <pluginRepository>
            <id>ibmix.magkit.group</id>
            <name>Aperto MagKit Group</name>
            <url>https://nexus.ibmix.de/repository/magkit/</url>
        </pluginRepository>
    </pluginRepositories>

    <distributionManagement>
        <snapshotRepository>
            <id>acid.magkit.snapshots</id>
            <url>https://nexus.ibmix.de/repository/magkit.snapshots/</url>
        </snapshotRepository>
        <repository>
            <id>acid.magkit.releases</id>
            <url>https://nexus.ibmix.de/repository/magkit.releases/</url>
        </repository>
    </distributionManagement>

</project>