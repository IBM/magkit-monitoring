<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>com.aperto.magkit</groupId>
  <artifactId>monitoring</artifactId>
  <version>1.0.0-SNAPSHOT</version>
  <name>Aperto MagKit Monitoring</name>

  <properties>
    <source.javaversion>11</source.javaversion>
    <target.javaversion>11</target.javaversion>

    <source.encoding>UTF-8</source.encoding>
    <resource.encoding>${source.encoding}</resource.encoding>
    <project.build.sourceEncoding>${source.encoding}</project.build.sourceEncoding>

    <maven.compiler.plugin.version>3.7.0</maven.compiler.plugin.version>
    <maven.jar.plugin.version>3.1.2</maven.jar.plugin.version>
    
    <jgit-buildnumber.version>2.4.0</jgit-buildnumber.version>
    <build.buildnumber />
  </properties>

  <dependencies>
   
    <dependency>
      <groupId>info.magnolia</groupId>
      <artifactId>magnolia-core</artifactId>
      <version>6.2</version>
    </dependency>
    <dependency>
      <groupId>info.magnolia.rest</groupId>
      <artifactId>magnolia-rest-services</artifactId>
      <version>2.2</version>
    </dependency>
    <dependency>
      <groupId>info.magnolia.rest</groupId>
      <artifactId>magnolia-rest-integration</artifactId>
      <version>2.2</version>
    </dependency>
    <dependency>
	  <groupId>org.apache.maven</groupId>
	  <artifactId>maven-model</artifactId>
	  <version>3.6.3</version>
	</dependency>
	<dependency>
	    <groupId>javax.servlet</groupId>
	    <artifactId>javax.servlet-api</artifactId>
	    <version>4.0.1</version>
	    <scope>provided</scope>
	</dependency>
  </dependencies>

  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>${maven.compiler.plugin.version}</version>
        <configuration>
          <encoding>${project.build.sourceEncoding}</encoding>
          <source>${source.javaversion}</source>
          <target>${target.javaversion}</target>
          <showDeprecation>true</showDeprecation>
          <showWarnings>true</showWarnings>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-jar-plugin</artifactId>
        <version>${maven.jar.plugin.version}</version>
        <configuration>
          <archive>
            <addMavenDescriptor>false</addMavenDescriptor>
            <forced>false</forced>
            <!-- see http://maven.apache.org/guides/mini/guide-manifest.html -->
            <index>true</index>
            <manifest>
              <addDefaultImplementationEntries>true</addDefaultImplementationEntries>
            </manifest>
            <manifestEntries>
              <!-- write build information into the manifest file -->
              <Build-Buildkey>${build.buildkey}</Build-Buildkey>
              <Build-Buildnumber>${build.buildnumber}</Build-Buildnumber>
              <Build-Revision>${build.revision}</Build-Revision>
              <Built-By>${customer}</Built-By>
              <Build-Jdk>${java.version}</Build-Jdk>
              <Implementation-Build>revision: ${build.buildnumber} - ${maven.build.timestamp}</Implementation-Build>
              <Implementation-Title>${project.artifactId}</Implementation-Title>
              <Implementation-Vendor>${customer}</Implementation-Vendor>
              <Implementation-Version>${project.version}</Implementation-Version>
              <X-Compile-Source-JDK>${source.javaversion}</X-Compile-Source-JDK>
              <X-Compile-Target-JDK>${target.javaversion}</X-Compile-Target-JDK>
              <X-Git-Commits-Count>${git.commitsCount}</X-Git-Commits-Count>
              <X-Git-Branch>${git.branch}</X-Git-Branch>
              <X-Git-Tag>${git.tag}</X-Git-Tag>
            </manifestEntries>
          </archive>
        </configuration>
      </plugin>
      <plugin>
        <groupId>com.labun.buildnumber</groupId>
        <artifactId>jgit-buildnumber-maven-plugin</artifactId>
        <version>${jgit-buildnumber.version}</version>
        <executions>
          <execution>
            <id>git-buildnumber</id>
            <goals>
              <goal>extract-buildnumber</goal>
            </goals>
            <phase>initialize</phase>
            <configuration>
              <buildNumberFormat>
                branch.replace('/', '-') + "-" + commitsCount + "-" + shortRevision
              </buildNumberFormat>
              <verbose>true</verbose>
            </configuration>
          </execution>
        </executions>
      </plugin>

    </plugins>
  </build>

  <scm>
    <connection>scm:git:https://acid-github.aperto.de/magkit/monitoring.git</connection>
    <developerConnection>scm:git:https://acid-github.aperto.de/magkit/monitoring.git</developerConnection>
    <url>scm:git:https://acid-github.aperto.de/magkit/monitoring.git</url>
  </scm>


  <repositories>
    <repository>
      <id>aperto.magkit.group</id>
      <name>Aperto MagKit Group</name>
      <url>https://acid-repo.aperto.de/repository/magkit/</url>
    </repository>
  </repositories>
  <pluginRepositories>
    <pluginRepository>
      <id>aperto.magkit.group</id>
      <name>Aperto MagKit Group</name>
      <url>https://acid-repo.aperto.de/repository/magkit/</url>
    </pluginRepository>
  </pluginRepositories>

  <distributionManagement>
    <snapshotRepository>
      <id>acid.magkit.snapshots</id>
      <url>https://acid-repo.aperto.de/repository/magkit.snapshots/</url>
    </snapshotRepository>
    <repository>
      <id>acid.magkit.releases</id>
      <url>https://acid-repo.aperto.de/repository/magkit.releases/</url>
    </repository>
  </distributionManagement>

</project>