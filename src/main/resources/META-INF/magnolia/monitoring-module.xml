<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE module SYSTEM "module.dtd" >
<module>
  <name>monitoring</name>
  <displayName>MagKit Monitoring Module</displayName>
  <description>Monitoring Module for Magnolia.</description>
  <class>com.aperto.magkit.monitoring.MonitoringModule</class>
  <versionHandler>com.aperto.magkit.monitoring.MonitoringModuleVersionHandler</versionHandler>
  <version>${parsedVersion.majorVersion}.${parsedVersion.minorVersion}.${parsedVersion.incrementalVersion}.${git.commitsCount}</version>

  <components>
    <id>main</id>
    <component>
    	<type>io.micrometer.prometheus.PrometheusMeterRegistry</type>
    	<implementation>com.aperto.magkit.monitoring.endpoint.prometheus.PrometheusMeterRegistryImpl</implementation>
    	<scope>singleton</scope>
    	<lazy>true</lazy>
    </component>
  </components>

  <dependencies>
    <dependency>
      <name>core</name>
      <version>6.2/*</version>
    </dependency>
  </dependencies>

</module>
